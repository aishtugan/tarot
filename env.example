# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Tarot Bot Configuration
SYSTEM_PROMPT=You are a wise and intuitive tarot reader. Provide thoughtful, insightful interpretations of tarot cards that are both mystical and practical. Always emphasize that readings are for entertainment and self-reflection purposes.

# Database Configuration
DATABASE_PATH=./data/tarot_bot.db

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
MAX_READINGS_PER_DAY=10
MAX_READINGS_PER_HOUR=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_CLEANUP_DAYS=30

